<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_study"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmitry.frenchalphabet.PageStudy"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:id="@+id/speak_image"
                android:background="@drawable/playbutton"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aa"
                android:textColor="@android:color/holo_purple"
                android:textSize="35dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:layout_marginTop="10dp"
                android:id="@+id/letter"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ответ"
            android:textSize="19dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:layout_gravity="end|center_vertical"
            android:id="@+id/answer"/>

    </FrameLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="40pt"
            android:layout_marginRight="40pt"
            android:layout_marginLeft="40pt"
            android:layout_marginTop="40pt">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edit_text_trans"
                android:digits="-qwertyuioplkjhgfdsazxcvbnm"

                />

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="OK"
                android:id="@+id/button_ok"/>

        </LinearLayout>



</LinearLayout>
